{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/blog/[slug]/page.jsx",
    "app/category/[slug]/page.jsx",
    "app/Components/ImageComponent/Image.jsx",
    "app/Components/PageSections/MoreLikeThis/index.jsx",
    "app/Components/TextComponents/index.jsx"
  ],
  "exclude": ["node_modules"]
}
